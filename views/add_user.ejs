    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        DataBase Manager
        <p class="fa fa-fw fa-tripadvisor"></p> 
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              
              
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div  style = "border: 1px solid #d2d6dd;   border-top: 4px solid #337ab7; border-radius: 4px; width: 100%;height: 100%; margin-left: auto; margin-right: auto" class="register-box-body">
                    <h3 class="login-box-msg">Create new User</h3>
                
                    <form action="/admin/manager/user/add" method="post">
                      <b>User Name</b>
                      <div class="form-group has-feedback">
                        <input type="text" class="form-control" placeholder="Enter..." id = "idUsername" name = "username"">
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                      </div>
                      <b>Password</b>
                      <div class="form-group has-feedback">
                        <input type="text" class="form-control" placeholder="Enter..." id = "idPassword" name = "password">
                        <span class="fa fa-lock form-control-feedback"></span>
                      </div>
                      <b>Email</b>
                      <div class="form-group has-feedback">
                        <input type="email" class="form-control" placeholder="Enter..." id = "idEmail" name = "email">
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                      </div>
                      <div class="row">
                        <div class="col-xs-12">
                         
                        </div>
                        <!-- /.col -->
                        <div >
                          <div class="col-xs-1"></div>
                          <div class="col-xs-5">
                              <button type="submit" class="btn btn-primary btn-md btn-block btn-md">Create</button>
                            </div>
                            <div class="col-xs-5">
                                <button type="reset" class="btn btn-primary btn-md btn-block  btn-md">Reset</button>
                            </div>
                            <div class="col-xs-1"></div>
                        </div>
                        
                        <!-- /.col -->
                      </div>
                    </form>
                  </div>
                  <!-- /.form-box -->
                </div>   
            </div>
